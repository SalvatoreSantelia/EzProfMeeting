<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>

    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>myJava.control.servlet.LoginServlet</servlet-class>


</servlet>
<servlet-mapping>
<servlet-name>LoginServlet</servlet-name>
<url-pattern>/View/General/login</url-pattern>
</servlet-mapping>



    <servlet>
        <servlet-name>AccessServlet</servlet-name>
        <servlet-class>myJava.control.servlet.AccessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccessServlet</servlet-name>
        <url-pattern>/View/General/access</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MessageServlet</servlet-name>
        <servlet-class>myJava.control.servlet.MessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessageServlet</servlet-name>
        <url-pattern>/View/General/message</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InviaMessaggioServlet</servlet-name>
        <servlet-class>myJava.control.servlet.InviaMessaggioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InviaMessaggioServlet</servlet-name>
        <url-pattern>/View/General/inviaMessaggio</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>myJava.control.servlet.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/View/General/BookingServlet</url-pattern>
    </servlet-mapping>




</web-app>